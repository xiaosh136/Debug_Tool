;;                                                                                                        ;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

global &_global_remote_version &_global_curr_version
&_global_remote_version=""
&_global_curr_version=""

&curr_script_dir=os.ppd()

global &_global_remote_url
&_global_remote_url="http://shsvn02/svn/Tools/trunk/Tools/PLY-T32Scripts"
os.command python "&curr_script_dir/_version_get_remote_ver.py" "&_global_remote_url" "&curr_script_dir/remote_version.xml" "&curr_script_dir/remote_version.txt"
wait 1.s

if os.file("&curr_script_dir/remote_version.txt")
(
  open #1 "&curr_script_dir/remote_version.txt" /read
  read #1 %line &_global_remote_version
  close #1
)
if os.file("&curr_script_dir/remote_version.xml")
(
  del "&curr_script_dir/remote_version.xml"
)
if os.file("&curr_script_dir/remote_version.txt")
(
  del "&curr_script_dir/remote_version.txt"
)

if os.file("&curr_script_dir/curr_version.txt")
(
  open #1 "&curr_script_dir/curr_version.txt" /read
  read #1 %line &_global_curr_version
  close #1
)

enddo
